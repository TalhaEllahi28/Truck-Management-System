@model Truck_Management_System.ViewModels.DashboardViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="dashboard" class="page-section active">
    <div class="header">
        <h1>Dashboard</h1>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Routes</h3>
            <div class="value">@Model.TotalRoutes</div>
        </div>
        <div class="stat-card success">
            <h3>Total Trucks</h3>
            <div class="value">@Model.TotalTrucks</div>
        </div>
        <div class="stat-card warning">
            <h3>Active Assignments</h3>
            <div class="value">@Model.TotalAssignments</div>
        </div>
        <div class="stat-card danger">
            <h3>Total Distance (KM)</h3>
            <div class="value">@Model.TotalDistance</div>
        </div>
    </div>

    <div class="content-card">
        <h2>Recent Assignments</h2>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Truck Number</th>
                        <th>Route</th>
                        <th>Distance</th>
                        <th>Price (PKR)</th>
                        <th>Petrol (L/KM)</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentAssignments.Any())
                    {
                        foreach (var item in Model.RecentAssignments)
                        {
                            <tr>
                                <td>@item.TruckNumber</td>
                                <td>@item.RouteName</td>
                                <td>@item.DistanceKm</td>
                                <td>@item.Price</td>
                                <td>@item.PetrolConsumption</td>
                                <td>@item.Status</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" style="text-align: center; color: #95a5a6;">No assignments yet</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
